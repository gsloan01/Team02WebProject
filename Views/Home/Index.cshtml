@{
    ViewBag.Title = "Home Page";
}


<h1>Magic Deck Builder</h1>
<div class="welcome_container">
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Models/Images/Magic-Gathering-Amonkhet-Merciless-Eternal.jpg" alt="one">
            <div class="carousel-caption">
                <h3>Test</h3>
                <p>One</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Models/Images/hm.png" alt="two">
            <div class="carousel-caption">
                <h3>Test</h3>
                <p>Two</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Models/Images/LOGO2.png" alt="three">
            <div class="carousel-caption">
                <h3>Test</h3>
                <p>Three</p>
            </div>
        </div>
    </div>

    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<br>

<div style="text-align:center">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
</div>

<div id="divID" class="welcome_box">
    <div class="welcome_block_container">
        <div class="three_block">
            <h3>Build Decks</h3>
            <a href="@Url.Action("Deck")">
                <img src="~/Models/Images/Sram.jpg" class="three_block_img" />
            </a>
            <p>Start Build you own deck</p>
        </div>
    </div>

    <div class="welcome_block_container">
        <div class="three_block">
            <h3>About</h3>
            <a href="@Url.Action("About")">
                <img src="~/Models/Images/image-asset.jpeg" class="three_block_img" />
            </a>
            <p>New to the Game? Learn more Here</p>
        </div>
    </div>

    <div class="welcome_block_container">
        <div class="three_block">
            <h3>Library</h3>
            <a href="@Url.Action("Deck")">
                <img src="~/Models/Images/Cogwork.jpg" class="three_block_img" />
            </a>
            <p>Check Out the Library</p>
        </div>
    </div>

</div>

    <a href="https://localhost:44334/Home/LogIn">Log In</a> / <a href="https://localhost:44334/Home/SignUp">Sign Up</a>
</div>

